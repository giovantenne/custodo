.col-md-3
.col-md-6
  =form_tag("/login") do
    %table.table.table-condensed.table-striped.table-bordered
      %tbody
        %tr
          %td Username:
          %td=text_field_tag :username, nil ,class: "form-control"
        %tr
          %td Password:
          %td=password_field_tag :password, nil ,class: "form-control"
        %tr
          %td 
          %td=submit_tag "Login", class: "btn btn-primary"

