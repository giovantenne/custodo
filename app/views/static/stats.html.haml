-cache(cache_key_for_results("stats")) do
  %table.table.table-condensed.table-striped.table-bordered
    %tbody
      %tr
        %td Partite giocate:
        %td=Match.where("played_on < ?", Time.now).count
      %tr
        %td Vinte dai neri:
        %td=Match.where("white_goals < black_goals").count
      %tr
        %td Vinte dai bianchi:
        %td=Match.where("white_goals > black_goals").count
      %tr
        %td Pareggiate:
        %td=Match.where("white_goals = black_goals").where("played_on < ?", Time.now).count

