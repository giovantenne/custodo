%table
  %tr
    %td
      Giocatore
    %td
      Giocate
    %td
      Vinte
    %td
      Perse
    %td
      Pareggiate
  -Player.order("name ASC").each do |player|
    -results=player.results
    %tr
      %td=player.name
      %td=results[0]
      %td=results[1]
      %td=results[2]
      %td=results[3]
  
%br
%table
  %tr
    %td Partite giocate:
    %td=Match.where("played_on < ?", Time.now).count
  %tr
    %td Vinte dai neri:
    %td=Match.where("white_goals < black_goals").count
  %tr
    %td Vinte dai bianchi:
    %td=Match.where("white_goals > black_goals").count
  %tr
    %td Pareggiate:
    %td=Match.where("white_goals = black_goals").where("played_on < ?", Time.now).count

%br
=link_to "Matches", matches_path
%br
=link_to "Players", players_path
